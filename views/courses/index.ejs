
<%- include('../partials/_header.ejs') %>
</head </head <link rel="stylesheet" href="/stylesheet/style.css" include="/partials/_header" >
    <title>Course Record Index</title>
<body>
    <h1><%= user.username %>'s  Course Records</h1>


    <h2>Courses:</h2>
    <p><a href="/courses/new">Add New Record</a></p>
    
    <table border="1">
      <thead>
        <tr>
          <th>Name</th>
          <th>Lessons</th>
          <th>Actions</th> 
        </tr>
      </thead>
      <tbody>
        <% courses.forEach(course => { %>
          <tr>
            <td><%= course.name %></td>
            <td>
              <ul>
                <% course.lessons.forEach(lesson => { %>
                  <li><%= lesson %></li>
                <% }); %>
              </ul>
            </td>
            <td>
              <a href="/courses/<%= course._id %>/edit">Edit</a> |
              <a href="/courses/<%= course._id %>/delete" onclick="return confirm('Are you sure you want to delete this course?');">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <br>
    <p><a href="/">Home</a></p>
    <p><a class="sign-out" href="/auth/sign-out">Sign out</a></p>
</body>
</html>