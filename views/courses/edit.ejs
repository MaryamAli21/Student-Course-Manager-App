
<%- include('../partials/_header.ejs') %>
    <title>Update Course</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    
  </head>
  <%- include('../partials/_nav.ejs') %>
  <body>
  
    <a href="/courses">Back to Course Records Dashboard.</a>
    <main>

      <section id="update-course">
          <h2>Update Course</h2>
          <form id="course-update-form">
              <input type="text" id="course-id" name="id" value="<%= course._id %>" hidden aria-hidden>
            <div>
                <label for="course-name">Course Name</label>
                <input type="text" id="course-name" name="name" value="<%= course.name %>" required>
            </div>
    
            <h4>Lessons</h4>
            <div id="lessons-container-update-form">
                <% course.lessons.forEach((lesson, index) => { %>
                    <div class="lesson-item">
                        <input type="text" name="lessons[]" class="lessons-input" value="<%= lesson %>" placeholder="Lesson name" required>
                        <button type="button" class="remove-lesson">Remove</button>
                    </div>
                <% }); %>
            </div>
            <button type="button" id="add-lesson-edit-form">Add Lesson</button>
    
            <div>
                <button type="submit">Update Course</button>
            </div>
          </form>
      </section>

  </main>


<script src="/js/updateLesson.js"></script>
  </body>
</html>